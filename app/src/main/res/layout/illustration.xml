<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/l1"
        android:layout_width="@dimen/color_width"
        android:layout_height="@dimen/illustration_height" android:background="@android:color/holo_green_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="@dimen/description_width"
        android:layout_height="@dimen/illustration_height"
        app:layout_constraintStart_toEndOf="@id/l1"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/illustration_text_size"
        android:gravity="center"
        android:text="MDT"/>
    <View
        android:id="@+id/l2"
        android:layout_width="@dimen/color_width"
        android:layout_height="@dimen/illustration_height" android:background="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/l1"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="@dimen/description_width"
        android:layout_height="@dimen/illustration_height"
        app:layout_constraintStart_toEndOf="@id/l1"
        app:layout_constraintTop_toTopOf="@id/l2"
        android:textSize="@dimen/illustration_text_size"
        android:gravity="center"
        android:text="CDT"/>
    <View
        android:id="@+id/l3"
        android:layout_width="@dimen/color_width"
        android:layout_height="@dimen/illustration_height" android:background="@android:color/holo_red_dark"
        app:layout_constraintTop_toBottomOf="@id/l2"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="@dimen/description_width"
        android:layout_height="@dimen/illustration_height"
        app:layout_constraintStart_toEndOf="@id/l3"
        app:layout_constraintTop_toTopOf="@id/l3"
        android:textSize="@dimen/illustration_text_size"
        android:gravity="center"
        android:text="PDT"/>
    <View
        android:id="@+id/l4"
        android:layout_width="@dimen/color_width"
        android:layout_height="@dimen/illustration_height" android:background="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/l3"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="@dimen/description_width"
        android:layout_height="@dimen/illustration_height"
        app:layout_constraintStart_toEndOf="@id/l4"
        app:layout_constraintTop_toTopOf="@id/l4"
        android:textSize="@dimen/illustration_text_size"
        android:gravity="center"
        android:text="EDT"/>

</androidx.constraintlayout.widget.ConstraintLayout>